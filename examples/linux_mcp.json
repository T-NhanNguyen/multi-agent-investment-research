{
  "mcpServers": {
    "finance-tools": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "finance-tools"
      ]
    },
    "graphrag": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v", "/mnt/e/ai-workspace/projects/graphRAG-LlamaIndex:/app",
        "-v", "graphrag_node_modules:/app/node_modules",
        "-v", "/mnt/e/ai-workspace/projects/graphRAG-LlamaIndex/.DuckDB:/app/.DuckDB",
        "-v", "/mnt/e/ai-workspace/projects/graphRAG-LlamaIndex/output:/app/output",
        "--add-host=host.docker.internal:host-gateway",
        "--env-file", "/mnt/e/ai-workspace/projects/graphRAG-LlamaIndex/.env",
        "-e", "NODE_NO_WARNINGS=1",
        "graphrag-llamaindex",
        "npx", "tsx", "mcp_server.ts"
      ]
    }
  }
}